<div class="posts">
  {{#each posts}}
<div class="card" style="width: 18rem;">
  <div class="card-body">
      <h5>
        <a href="/post/{{id}}">{{title}}</a>
      </h2>
      <h6 class="card-subtitle mb-2 text-muted">
        Posted by {{User.namename}} on {{format_date date_created}}
      </h6>
    </div>
    <p class="card-text">
      {{body}}
    </p>
  </div>
  {{/each}}
</div>